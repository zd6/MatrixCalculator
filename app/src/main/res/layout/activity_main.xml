                android:layout_height="90dp"
                android:ems="10"
                android:hint="(0)"
                android:inputType="numberSigned"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/r4c2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:ems="10"
                android:hint="(0)"
                android:inputType="numberSigned"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/r4c3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:ems="10"
                android:hint="(0)"
                android:inputType="numberSigned"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/r4c4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:ems="10"
                android:hint="(0)"
                android:inputType="numberSigned"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>